{
  "name": "listwell",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write .",
    "inngest:dev": "npx inngest-cli@latest dev -u http://localhost:4000/api/inngest",
    "infra:up": "docker compose up -d",
    "infra:down": "docker compose down",
    "db:push": "pnpm --filter @listwell/db db:push",
    "db:generate": "pnpm --filter @listwell/db db:generate",
    "db:migrate": "pnpm --filter @listwell/db db:migrate",
    "db:studio": "pnpm --filter @listwell/db db:studio"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2"
  },
  "packageManager": "pnpm@10.30.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msw",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}